<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tdt4140.gr1836.app.ui.LoginController">
   <top>
      <Label fx:id="loginText" text="Log in" BorderPane.alignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="userNameField" prefHeight="25.0" prefWidth="160.0" promptText="Username" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <Label text="" textFill="#d72727" fx:id="confirmationLabel">
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
            <Button fx:id="submitBtn" mnemonicParsing="false" onAction="#submitLoginStage" prefHeight="50.0" prefWidth="100.0" text="Sign in" />
            <Button fx:id="RegisterBtn" mnemonicParsing="false" onAction="#goRegister" prefHeight="50.0" prefWidth="100.0" text="Register" />

         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </VBox>
   </center>
   <padding>
      <Insets top="40.0" />
   </padding>
</BorderPane>
