<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tdt4140.gr1836.app.ui.LoginController">
   <top>
      <Label fx:id="loginText" text="Log in" BorderPane.alignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="userNameField" prefHeight="25.0" prefWidth="160.0" promptText="Username" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <Button fx:id="confirmBtn" mnemonicParsing="false" onAction="#submitLoginStage" prefHeight="50.0" prefWidth="100.0" text="Submit" />
            <Button fx:id="closeBtn" mnemonicParsing="false" onAction="#closeLoginStage" prefHeight="50.0" prefWidth="100.0" text="Cancel" />

         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </VBox>
   </center>
   <padding>
      <Insets top="40.0" />
   </padding>
</BorderPane>
